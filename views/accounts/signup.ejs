<% layout('./public/layout') %>
<div class="row">

<div class="col-lg-6 col-md-offset-3">
<%  if(error.length >0) {%>
<div class="alert alert-dismissible alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
  <span aria-hidden="true">&times;</span>
  </button>
  <%= error %>
</div>
<% } %>



<form method="post">
<div class="form-group" >
   <label> Nombre</label>
   <input type="text"  name="name" class="form-control"  required="true" />
</div>

<div class="form-group" >
   <label> Apellido</label>
   <input type="text"  name="lastname" class="form-control"  required="true" />
</div>

<div class="form-group" >
   <label> Cedula</label>
   <input type="text"  name="identification" class="form-control"  required="true" />
</div>

<div class="form-group" >
   <label> Facultad</label>
   <input type="text"  name="faculty" class="form-control"  required="true" />
</div>

<div class="form-group" >
   <label> Matricula/Codigo de Maestro</label>
   <input type="text"  name="university_ident" class="form-control"  required="true" />
</div>

<div class="form-group" >
<label> Email Institucional</label>
<input type="email"  name="email" class="form-control" required="true" />
</div>


<div class="form-group" >
  <label>Contrase√±a</label>
  <input type="password"  name="password" class="form-control"   required="true"/>
</div>

<div class="form-group" >
  <label>Administrador</label>
  <input type="radio" name="adminuser"  class="form-control"   value="1"> Si<br>
   <input type="radio" name="adminuser" class="form-control"    value="0" checked> No<br>
</div>

<button type="submit" class="btn btn-success">Registrar</button>

</form>

</div>
</div>
